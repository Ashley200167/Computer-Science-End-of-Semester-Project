# import the libraries to create games
import pygame, sys, random
from pygame.locals import *
import time
import time

# initialize the game
pygame.init()
clock = pygame.time.Clock()

# define the animation speed in frames per second
FPS = 45
fpsClock = pygame.time.Clock()

# setup the canvas or surface on which objects will be displayed
surface_width = 600
surface_height = 500
DISPLAYSURF = pygame.display.set_mode((surface_width, surface_height))
pygame.display.set_caption('Maze')
screen = pygame.display.set_mode([600,500])
# define colors in RGB
WHITE = (255, 255, 255)
BLUE = (0, 0, 204)
RED = (255, 0, 0)
GREEN = (0, 255, 0)
BLACK = (0, 0, 0)


#When the game is not paused
screen.fill(WHITE)
paused = False

#Walls




#load the character
Character = pygame.image.load('assassin.jpg')
Character = pygame.transform.scale(Character, (50, 50))
Coin = pygame.image.load('unnamed.png')


#beginning position of character
Characterx = 550
Charactery = 450

Coinx = random
Coiny = random


gameOver = False
while gameOver == False:
    pressed = pygame.key.get_pressed()

#move the character
    if pressed[pygame.K_UP]:
        Charactery = Charactery - 2
        if Charactery <= 0:
            Charactery = 0
    if pressed[pygame.K_DOWN]:
        Charactery = Charactery + 2
        if Charactery >= 450:
            Charactery = 450
    if pressed[pygame.K_LEFT]:
        Characterx = Characterx - 2
        if Characterx <= 0:
            Characterx = 0
    if pressed[pygame.K_RIGHT]:
        Characterx = Characterx + 2
        if Characterx >= 550:
            Characterx = 550

#update the positions
    DISPLAYSURF.blit(Character, (Characterx, Charactery))
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            gameOver = True
            pygame.quit()
            sys.exit()

    #update the display at the properspeed
    pygame.display.update()
    fpsClock.tick(FPS)
