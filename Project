# import the libraries to create games
import pygame, sys, random
from pygame.locals import *
import time

# initialize the game
pygame.init()

# define the animation speed in frames per second
FPS = 45
fpsClock = pygame.time.Clock()

# setup the canvas or surface on which objects will be displayed
surface_width = 800
surface_height = 600
DISPLAYSURF = pygame.display.set_mode((surface_width, surface_height))
pygame.display.set_caption('Maze')

# define colors in RGB
WHITE = (255, 255, 255)
BLUE = (0, 0, 255)
RED = (255, 0, 0)
GREEN = (0, 255, 0)
BLACK = (0, 0, 0)

paused = False

#load the character
Character = pygame.image.load('assassin.jpg')

#beginning position of character
Characterx = 580
Charactery = 780


gameOver = False
while gameOver == False:

#move the character
    if pressed[pygame.K_UP]:
        caty = caty - 5
        if caty <= 0:
            caty = 0
    if pressed[pygame.K_DOWN]:
        caty = caty + 5
        if caty >= 300:
            caty = 300
    if pressed[pygame.K_LEFT]:
        catx = catx - 5
        if catx <= 0:
            catx = 0
    if pressed[pygame.K_RIGHT]:
        catx = catx + 5
        if catx >= 350:
            catx = 350

#update the positions
    DISPLAYSURF.blit(Character, (Characterx, Charactery))

