# import the libraries to crate games
import pygame, sys, random
from pygame.locals import *
import time

# initialize the game
pygame.init()

# define the animation speed in frames per second
FPS = 45
fpsClock = pygame.time.Clock()

# setup the canvas or surface on which objects will be displayed
surface_width = 800
surface_height = 600
DISPLAYSURF = pygame.display.set_mode((surface_width, surface_height))
pygame.display.set_caption('bouncing ball')

# define colors in RGB
WHITE = (255, 255, 255)
BLUE = (0, 0, 255)
RED = (255, 0, 0)
GREEN = (0, 255, 0)
BLACK = (0, 0, 0)

paused = False
